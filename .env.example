# Oil Trading Dashboard Environment Configuration
# ================================================
# Copy this file to .env and update with your settings

# Bloomberg Configuration
# Set to 'true' to use real Bloomberg API, 'false' for mock data
BLOOMBERG_USE_MOCK=true
BLOOMBERG_HOST=localhost
BLOOMBERG_PORT=8194

# Data Storage
DATA_DIR=./data
CACHE_DIR=./data/cache
TRADES_DB=./data/trades/trades.db

# Risk Settings
MAX_VAR_LIMIT=375000
MAX_GROSS_EXPOSURE=20000000
MAX_DRAWDOWN_DAILY=0.05

# Dashboard Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/dashboard.log

# API Keys (if using external data sources)
# ALPHA_VANTAGE_API_KEY=your_key_here
# QUANDL_API_KEY=your_key_here
