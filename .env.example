# Oil Trading Dashboard Environment Configuration
# ================================================
# Copy this file to .env and update with your settings

# =============================================================================
# BLOOMBERG CONFIGURATION
# =============================================================================

# IMPORTANT: This dashboard requires a Bloomberg Terminal connection by default.
# Without Bloomberg Terminal, the dashboard will show "Disconnected" status and
# display "Data Unavailable" messages.

# Set to 'true' ONLY for development/testing without Bloomberg Terminal.
# When false (default), real Bloomberg data is required.
# WARNING: Mock mode displays simulated data, NOT real market data.
BLOOMBERG_USE_MOCK=false

# Bloomberg API Connection Settings
BLOOMBERG_HOST=localhost
BLOOMBERG_PORT=8194

# Bloomberg API request timeout in seconds
BLOOMBERG_TIMEOUT=30

# Enable Bloomberg real-time subscriptions (requires BLPAPI subscription service)
BLOOMBERG_ENABLE_SUBSCRIPTIONS=true

# =============================================================================
# BLOOMBERG TERMINAL REQUIREMENTS
# =============================================================================
# To use live data, you need:
# 1. Bloomberg Terminal running on the same machine (or accessible host)
# 2. Bloomberg API (blpapi) installed: pip install blpapi
# 3. Valid Bloomberg Terminal license with API access
#
# If Bloomberg is not available:
# - Set BLOOMBERG_USE_MOCK=true for development/demo purposes
# - All data displayed will be simulated (NOT real market data)
# - The sidebar will show "Mock Data (Dev)" in orange

# =============================================================================
# DATA STORAGE
# =============================================================================

DATA_DIR=./data
CACHE_DIR=./data/cache
TRADES_DB=./data/trades/trades.db

# Historical data storage format (parquet recommended)
HISTORICAL_FORMAT=parquet

# Cache expiry times (in seconds)
CACHE_REALTIME_TTL=5
CACHE_HISTORICAL_TTL=86400
CACHE_FUNDAMENTAL_TTL=604800

# =============================================================================
# RISK MANAGEMENT LIMITS
# =============================================================================

# Portfolio VaR limit (USD)
MAX_VAR_LIMIT=375000

# Maximum gross exposure (USD)
MAX_GROSS_EXPOSURE=20000000

# Maximum net exposure (USD)
MAX_NET_EXPOSURE=15000000

# Daily drawdown limit (percentage as decimal)
MAX_DRAWDOWN_DAILY=0.05

# Position limits by instrument (contracts)
MAX_WTI_CONTRACTS=100
MAX_BRENT_CONTRACTS=75
MAX_RBOB_CONTRACTS=50
MAX_HO_CONTRACTS=50

# Concentration limits (percentage)
MAX_SINGLE_INSTRUMENT_CONCENTRATION=40
MAX_CRUDE_GROUP_CONCENTRATION=60
MAX_SINGLE_STRATEGY_CONCENTRATION=50

# =============================================================================
# DASHBOARD SETTINGS
# =============================================================================

STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Auto-refresh interval (seconds) - set to 0 to disable
# Higher values reduce server load but data updates less frequently
# Recommended: 10 for production, 5 for active trading
AUTO_REFRESH_INTERVAL=10

# Theme (dark/light)
DASHBOARD_THEME=dark

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=./logs/dashboard.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# EXTERNAL API KEYS (Optional)
# =============================================================================

# For alternative data sources if Bloomberg is not available
# ALPHA_VANTAGE_API_KEY=your_key_here
# QUANDL_API_KEY=your_key_here
# EIA_API_KEY=your_key_here

