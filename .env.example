# =============================================================================
# OIL TRADING DASHBOARD - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize for your environment.
# 
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# BLOOMBERG CONFIGURATION
# =============================================================================
# Dashboard requires Bloomberg Terminal by default for live data.
# Set BLOOMBERG_USE_MOCK=true only for development without Bloomberg.

BLOOMBERG_USE_MOCK=false
BLOOMBERG_HOST=localhost
BLOOMBERG_PORT=8194
BLOOMBERG_TIMEOUT=30
BLOOMBERG_ENABLE_SUBSCRIPTIONS=true

# =============================================================================
# PORTFOLIO SETTINGS
# =============================================================================
PORTFOLIO_BASE_CAPITAL=1000000

# =============================================================================
# RISK LIMITS
# =============================================================================
MAX_VAR_LIMIT=375000
MAX_GROSS_EXPOSURE=20000000
MAX_NET_EXPOSURE=15000000
MAX_DRAWDOWN_DAILY=0.05

# Position limits (contracts)
MAX_WTI_CONTRACTS=100
MAX_BRENT_CONTRACTS=75
MAX_RBOB_CONTRACTS=50
MAX_HO_CONTRACTS=50

# Concentration limits (percentage as decimal)
MAX_SINGLE_INSTRUMENT_CONCENTRATION=0.40
MAX_CRUDE_GROUP_CONCENTRATION=0.60

# =============================================================================
# DASHBOARD SETTINGS
# =============================================================================
AUTO_REFRESH_INTERVAL=10
DASHBOARD_THEME=dark

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# ML MODEL SETTINGS (Phase 4)
# =============================================================================
ML_MODEL_PATH=models/
ML_PREDICTION_HORIZON=5
ML_RETRAIN_INTERVAL_DAYS=7
